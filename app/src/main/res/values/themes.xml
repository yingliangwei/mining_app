<resources>
    <!-- Base application theme. -->
    <style name="Theme.Mining" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_800</item>
        <item name="colorPrimaryVariant">@color/purple_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_800</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:windowBackground">@color/f3f3f3</item>
    </style>


    <style name="footButton" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="button" parent="Theme.Material3.Dark">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_200</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>