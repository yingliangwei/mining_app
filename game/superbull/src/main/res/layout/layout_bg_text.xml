<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:clipChildren="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="510dp"
        android:layout_height="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_text"
                android:translationX="2.6dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_text"
                android:scaleX="-1"
                android:translationX="-2.6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:orientation="vertical"
                android:paddingStart="50dp"
                android:paddingEnd="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/item_01_fx_4"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/game1_0_2"
                        android:visibility="visible" />


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/item_01_fx_1"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/game1_0_1"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/item_01_fx_3"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:src="@drawable/game1_0_3"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/item_01_fx_2"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:src="@drawable/game1_0_4"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:src="@drawable/item_01_fx_6"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:src="@drawable/game_cn_0_2" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/game1_0_5" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:src="@drawable/item_01_fx_5"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:src="@drawable/game_cn_0_1" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/game1_0_6" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="70dp">

                <RelativeLayout
                    android:layout_width="370dp"
                    android:layout_height="160dp">

                    <View
                        android:layout_width="370dp"
                        android:layout_height="160dp"
                        android:background="@drawable/bg_game1_0"
                        android:translationY="-3dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.mining.superbull.widget.RunnerWidget
                            android:id="@+id/super_1"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                        <com.mining.superbull.widget.RunnerWidget
                            android:id="@+id/super_2"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.mining.superbull.widget.RunnerWidget
                            android:id="@+id/super_3"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:background="#FFC107" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>